<%= form_for @actor, html: {class: 'form-horizontal'}, url: actor_path(@actor), remote: true do |f| %>

	<div class="field form-group">
		<%= f.label :name , class: 'col-sm-1 control-label' %>
		<div class="col-sm-4">
			<%= f.text_field :name, class: 'form-control' %>
		</div>
	</div>
	<div class="field form-group">
		<%= f.label :platform , class: 'col-sm-1 control-label' %>
		<div class="col-sm-4">
			<%= f.text_field :platform, class: 'form-control' %>
		</div>
	</div>
	<div class="field form-group">
		<%= f.label :protocol , class: 'col-sm-1 control-label' %>
		<div class="col-sm-3">
			<%= f.text_field :protocol, class: 'form-control' %>
		</div>
	</div>
	<div class="col-sm-1 col-sm-offset-4">
		<%= f.submit 'Save', class: 'btn btn-primary' %>
	</div>
<% end %>
