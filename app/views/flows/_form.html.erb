<%= form_for @flow , url: request_flows_path(@request) , :html => {:role => 'form'} do |f| %>
	<div class="row flow-top">
		<div class="field form-group">
			<div class="col-sm-6 col-sm-offset-3 ">
				<h3 class="text-muted">New Dataflow</h3>
				<%= f.label :name, class: 'control-label' %><br>
				<%= f.text_field :name, class: 'form-control' %>
			</div>
		</div><br>
	</div>
	<div class="row">
		<div class="col-sm-3 form-group field">
			<h4 class="text-muted">Provider(s)</h4>
			<br>
				<%= f.collection_select :provider_ids, @request.actors.all, :id, :name, {include_blank: "Select a provider system"},{multiple: true, class: 'selectpicker'} %>

		</div>
		<div class="col-sm-6">
			<h4 class="text-muted">Message</h4>
			<div class="col-sm-4">	
				Size: <%= f.select :size,
					options_for_select([
						['< 1kb','< 1kb'],
						['< 1mb','< 1mb']
					]), {},{class: 'form-control'}%>
			</div>
			<div class="col-sm-4">	
				Security: <%= f.select :security,
					options_for_select([
						['S','S'],
						['C','C']
					]), {},{class: 'form-control'}%>
			</div>
		</div>
		<div class="col-sm-3">
			<h4 class="text-muted">Consumer(s)</h4>
			<br>
				<%= f.collection_select :consumer_ids, @request.actors.all, :id, :name, { multiple: true, include_blank: "Select a consumer system"},{class: 'selectpicker'} %>

		</div>
	</div>
	<div class="row">
		<div class="field form-group">
			<div class="col-sm-8 col-sm-offset-2">
				<%= f.label :objective, class: 'control-label'%><br>
				<%= f.text_area :objective , class: 'form-control'%>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-3 col-sm-offset-10">
			<%= f.submit class: 'btn btn-primary'%>
		</div>
	</div>
<% end %>
