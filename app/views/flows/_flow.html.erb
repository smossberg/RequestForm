<div flow-id="<%= flow.id %>">
  <div class="row">
    <div class="col-xs-12 col-sm-12" >
      <section class ="panel panel-primary">
        <header class="panel-heading">
          <div class="row">
            <div class="col-xs-5 col-xs-offset-5">
              <h1 class="panel-title" ><%= flow.name%></h1>
            </div>
            <div class="col-xs-2">
              <%= link_to '', request_flow_path(@request,flow),
                          method: :delete,
                          data: { confirm: 'Are you sure?' },
                          class: 'btn btn-default glyphicon glyphicon-trash', remote: true %>
              <%= link_to '', edit_request_flow_path(@request,flow),
                          class: 'btn btn-default glyphicon glyphicon-pencil', remote: true %>
            </div>
          </div>
        </header>
        <div class="panel-body">
          <div class="col-sm-3 ">
		  <h4 class="text-muted">Provider(s)</h4>
		  <table id="providers-table">
		    <% flow.providers.each do |f|%>
				    <tr>
					    <td><p><%= link_to f.name, request_actor_path(@request, f) %></p></td><td><p> :  <%= f.protocol %></p></td>
				    </tr>
				<% end %>
		</table>
            <br>
          </div>
          <div class="col-sm-6">
		  <div class="row">
		    <h4 class="text-muted">Message</h4>
		    <div class="col-sm-4">
		      <b>Size:</b> <%= flow.size %>
		    </div>
		    <div class="col-sm-4">
		      <b>Security:</b> <%= flow.security %>
		    </div>
		    <div class="col-sm-4">
	    <b>Master data?:</b>
	    <% if flow.master_data == true %>
		    Yes
	    <% else %>
			No
		<% end %>
		    </div>
	    </div><br>
			<div class="row">
				<div class="col-sm-12">
				   <b>Message Frequency:</b><br>
				   <%= flow.frequency %>
				</div>
			</div>
          </div>
          <div class="col-sm-3 ">
            <h4 class="text-muted">Consumer(s)</h4>
	    	<table id="consumers-table">
			<% flow.consumers.each do |f|%>
				<tr>
			                <td><p><%= link_to f.name, request_actor_path(@request, f) %></p></td><td><p> : <%= f.protocol %> </p></td>
				</tr>
              <% end %>
      </table>
            <br>
          </div>
			  </div>
        <div class="panel-footer">
            <h4 class="text-muted">Objective</h4>
            <%= flow.objective %>

        </div>
		  </section>
    </div>
	</div>
</div>
