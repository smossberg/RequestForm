<div heading-id="<%= heading.id %>" >
	<div class="row">
		<div class="col-xs-12 col-sm-12" >
			<section class ="panel panel-primary">
				<header class="panel-heading">
					<div class="row">
						<div class="col-xs-10">
							<h1 class="panel-title" ><%= heading.title %></h1>
						</div>
						<div class="col-xs-2">
							<%= link_to edit_business_context_heading_path(@headerable, heading), remote: true , :class=>'btn btn-default btn-small' do %>
								<i class="glyphicon glyphicon-pencil"></i>
							<% end %>
							<%= link_to business_context_heading_path(@headerable,heading), remote: true, method: :delete,data: {confirm: 'Are you sure?' }, :class=>'btn btn-default' do %>
								<i class="glyphicon glyphicon-trash"></i>
							<% end %>
						</div>
					</div>
				</header>
				<div class="panel-body">
					<%= simple_format(heading.text) %>
				</div>
				<div class="panel-footer">
					<div class="row">
						<div class="col-sm-12">
                <div class="row">
                  <div class="col-xs-2 col-xs-offset-5">
                    <span class="text-muted">Attachments</span>
                  </div>
                </div>
                <div id="heading-uploads-<%= heading.id %>">
                  <div class="row">
                    <%= render heading.uploads , :heading => heading, :edit => false%>
                  </div>
                </div>
                <div id="upload-form-<%= heading.id%>" >
                  <% if false %>
                    <%= form_for heading.uploads.new, html: { multipart: true , class: "dropzone"},url: heading_uploads_path(heading), remote: true do |f|  %>
                      <div class="fallback panel p-a-2">
                          <%= f.label :attachment %><br>
                          <%= f.file_field :attachment %><br>
                          <%= f.submit "Upload" %>
                      </div>
                    <% end %>
                  <% end %>
                </div>
						</div>
					</div>
				</div>
			</section>
		</div>
	</div>
</div>
