<h3>Redigera</h1>
<%= form_for @heading, html: {class: 'form-horizontal'}, url: heading_path(@heading), remote: true do |f| %>
	<div class="field form-group">
		<%= f.label :title , class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_field :title, class: 'form-control' %>
		</div>
	</div>	
	<div class="field form-group">
		<%= f.label :text, class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= f.text_area :text, class: 'form-control' %>
		</div>
	</div>
	<div class="actions form-group">
		<div class="col-sm-offset-2 col-sm-10">
		      <%= f.submit %>
		</div>
	</div>
<% end %>
	<div class="field form-group">
		<div class="">
			<div class="col-sm-12">
				<div id="heading-uploads-<%= @heading.id %>">
					<div class="row">
				<%= render @heading.uploads , :heading => @heading ,:edit => true%>
					</div>
				<div>
			</div>
		</div>
	</div>
	<div id="upload-form-<%= @heading.id%>" >
	<%= form_for @heading.uploads.new, html: { multipart: true , class: "dropzone"},url: heading_uploads_path(@heading), remote: true do |f|  %>
	  <div class="fallback panel p-a-2">
		    <%= f.label :attachment %><br>
		    <%= f.file_field :attachment %><br>
		    <%= f.submit "Upload" %>
		  </div>
		<% end %>	
	</div>
